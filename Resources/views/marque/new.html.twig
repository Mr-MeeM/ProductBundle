{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% extends 'layout.html.twig' %}

{% block body %}
    <fieldset>
        <legend>{{ 'Nouvelle Marque'}}</legend>
    </fieldset>
    <div class="row">
        <div class="col-lg-12">      
            <div class="btn_list pull-right">
                <a href="{{ path('marque_index') }}"  class="btn btn-info">Liste des marques <span class="glyphicon glyphicon-th-list"></span></a>
            </div>
        </div>
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-lg-6">
            {{ form_row(form.name) }}
        </div>
        <div class="col-lg-6">
            {{ form_row(form.publie) }}
        </div>
    </div>  
    <div class="row">
        <div class="col-lg-6">
            {{ form_row(form.image) }}
        </div>
    </div>     
    <div class="row">
        <div class="col-lg-4">
        <input type="submit" value="Enregistrer" class="btn btn-success"/>
        </div>
    </div>
    {{ form_end(form) }}
   
{% endblock %}

